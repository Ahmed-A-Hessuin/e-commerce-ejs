<%- include('parts/header.ejs') %>
    <link rel="stylesheet" href="/css/style.css" />
    <%- include('parts/nav.ejs') %>
        <form action="/signup" style="border:1px solid #ccc" method="POST">
            <div class="container">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                <label for="name"><b>Username</b></label>
                <input type="text" placeholder="Enter you name" name="username">
                <% let usernameError=validationError.find(err=>err.param==='username') %>
                    <% if(usernameError) {%>
                        <p class="alert alert-danger">
                            <%= usernameError.msg %>
                        </p>
                        <% } %>
                            <label for="email"><b>Email</b></label>
                            <input type="text" placeholder="Enter Email" name="email">
                            <% let emailError=validationError.find(err=>err.param==='email') %>
                                <% if(emailError) {%>
                                    <p class="alert alert-danger">
                                        <%= emailError.msg %>
                                    </p>
                                    <% } %>
                                        <label for="psw"><b>Password</b></label>
                                        <input type="password" placeholder="Enter Password" name="password">
                                        <% let passwordError=validationError.find(err=>err.param==='password') %>
                                            <% if(passwordError) {%>
                                                <p class="alert alert-danger">
                                                    <%= passwordError.msg %>
                                                </p>
                                                <% } %>
                                                    <label for="psw-repeat"><b>Repeat Password</b></label>
                                                    <input type="password" placeholder="Repeat Password"
                                                        name="password-repeat">
                                                    <% let passwordreError=validationError.find(err=>
                                                        err.param==='password-repeat') %>
                                                        <% if(passwordreError) {%>
                                                            <p class="alert alert-danger">
                                                                <%= passwordreError.msg %>
                                                            </p>
                                                            <% } %>
                                                                <div class="clearfix">
                                                                    <a href="/">
                                                                        <button type="button" class="cancelbtn">
                                                                            Cancel
                                                                        </button>
                                                                    </a>
                                                                    <button type="submit" class="signupbtn">Sign
                                                                        Up</button>
                                                                </div>
            </div>
        </form>
        <%- include('parts/footer.ejs') %>