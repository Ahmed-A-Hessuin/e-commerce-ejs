<%- include('parts/header.ejs') %>
    <%- include('parts/nav.ejs') %>
        <div class="container text-center">
            <form action="/admin/addProduct" method="POST" enctype="multipart/form-data">
                <h3>Add Product</h3>
                <input type="text" class="form-control" name="name" placeholder="Name" style="
        margin:  20px 0 20px 0;">
                <%let nameError=validationError.find(err=>err.param==='name') %>
                    <% if(nameError) { %>
                        <p class="alert alert-danger">
                            <%= nameError.msg %>
                        </p>
                        <% } %>
                            <input type="text" class="form-control" name="price" placeholder="Price" style="
                    margin: 20px 0 20px 0;">
                            <% let priceError=validationError.find(err=>err.param==='price') %>
                                <% if(priceError) { %>
                                    <p class="alert alert-danger">
                                        <%= priceError.msg %>
                                    </p>
                                    <% } %>
                                        <textarea class="form-control" rows="5" placeholder="Description"
                                            name="description"></textarea>
                                        <br>
                                        <% let descriptionError=validationError.find(err=>err.param==='description') %>
                                            <% if(descriptionError) { %>
                                                <p class="alert alert-danger">
                                                    <%= descriptionError.msg %>
                                                </p>
                                                <% } %>
                                                    <select class="form-control" style="
                                margin: 20px 0 20px 0;" name="category" type="password">
                                                        <option value="">Choose a category</option>
                                                        <option value="clothes">Clothes</option>
                                                        <option value="cars">Cars</option>
                                                        <option value="phones">Phones</option>
                                                        <option value="computers">Laptop</option>
                                                    </select>
                                                    <% let categoryError=validationError.find(err=>
                                                        err.param==='category') %>
                                                        <% if(categoryError) { %>
                                                            <p class="alert alert-danger">
                                                                <%= categoryError.msg %>
                                                            </p>
                                                            <% } %>
                                                                <div class="form-group">

                                                                    <label for="exampleFormControlFile1">Example file
                                                                        input</label>
                                                                    <input type="file" class="form-control-file"
                                                                        name="image" placeholder="Image">
                                                                </div>
                                                                <br>
                                                                <% let imageError=validationError.find(err=>
                                                                    err.param==='image') %>
                                                                    <% if(imageError) { %>
                                                                        <p class="alert alert-danger">
                                                                            <%= imageError.msg %>
                                                                        </p>
                                                                        <% } %>
                                                                            <input type="submit" value="Add Product"
                                                                                class="btn btn-primary"
                                                                                style=" margin: 20px 0 20px 0;">
            </form>
        </div>
        <%- include('parts/footer.ejs') %>